@model LibraryManagement.Models.Prestamo

@{
    ViewData["Title"] = "Registrar Préstamo";
}

<h2>Registrar préstamo</h2>

<div class="card shadow-sm mb-4" style="max-width: 400px;">
    <img src="@Model.Libro?.Imagen"
         class="card-img-top"
         alt="@Model.Libro?.Titulo"
         style="max-height:240px;object-fit:cover;" />
    <div class="card-body">
        <h5 class="card-title">@Model.Libro?.Titulo</h5>
        <p class="card-text text-muted">@Model.Libro?.Autor</p>
    </div>
</div>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="LibroId" />
    <div class="form-group">
        <label asp-for="FechaPrestamo" class="control-label"></label>
        <input asp-for="FechaPrestamo" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Confirmar préstamo</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

