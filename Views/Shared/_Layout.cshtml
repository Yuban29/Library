@using LibraryManagement
@using Microsoft.AspNetCore.Identity
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Biblioteca - @ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="bg-white shadow-sm">
        <nav class="navbar navbar-expand-lg container">
            <a class="navbar-brand" href="/">
                <img src="/images/logo.png" alt="Logo" width="40" height="40" class="d-inline-block align-text-top" />
                Biblioteca
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navMenu">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Books" asp-action="Index">Colección</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Prestamos" asp-action="Index">Préstamos</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Reservas" asp-action="Index">Reservas</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <main class="container my-5">
        @RenderBody()
    </main>

    <footer class="text-center py-4 text-muted">
        © Biblioteca - Sistema de ejemplo
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
